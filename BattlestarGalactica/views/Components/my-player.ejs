<li class="list-group-item bg-transparent  bg-transparent ">
  <!-- Player Section -->
  <div class="row">
    <div class="col">
      <div class="border-bottom py-1 border-dark row">
        <!-- Player Name -->
        <div class="col-lg-6">
          <h2><%= player.name %> (it's me)</h2>
        </div>
      </div>
      <!-- Player Identity Cards -->
      <div class="row my-2">
        <% player.identityCards.forEach(function(card){ %>
        <div class="col col-lg-4">
          <% if ( card.executed ) {%> <%-include('executed-identity-card', {
          "card": card}) %> <%}else{%> <%-include('identity-card', { "card":
          card}) %> <%}%> <% if(!card.revealed){%>
          <div style="width: 18rem;">
            <button
              class="btn mb-2 btn-info shadow btn-block"
              onClick="revealToAll('<%= card.id %>')"
            >
              Reveal
            </button>
          </div>
          <%}%>
        </div>
        <% }); %> <% if (player.identityCards.length<2) {%> <% for (var i=0;
        i<2-player.identityCards.length; i++) {%>
        <div class="col my-auto col-lg-4"></div>
        <%}%> <%}%>

        <!-- Execute -->
        <% if ( execution ) {%>
        <div class="col my-auto col-lg-4">
          <div class="mt-5 mb-2" style="width: 18rem;">
            <button class="btn btn-danger shadow btn-block" onClick="execute()">
              Execute
            </button>
          </div>
        </div>
        <%}%>
      </div>
    </div>
  </div>
</li>
